@model IEnumerable<GameStoreMVC.Models.ProductoModel>

@{
    ViewData["Title"] = "Catálogo de Juegos";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-uppercase">Catálogo de Juegos</h2>

        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Nuevo Producto
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">

        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">

                        <div class="text-center bg-light p-3">
                            <img src="@item.ImagenUrl" class="img-fluid" alt="@item.Nombre"
                                 style="height: 180px; object-fit: contain;">
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" title="@item.Nombre">@item.Nombre</h5>

                            <p class="card-text small text-muted text-truncate">@item.Descripcion</p>

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="fs-5 fw-bold text-danger">S/ @item.Precio</span>
                                    <span class="badge bg-secondary">Stock: @item.Stock</span>
                                </div>

                                <button class="btn btn-primary w-100">
                                    <i class="bi bi-cart-plus"></i> Añadir al Carrito
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    No hay productos registrados todavía. ¡Agrega uno!
                </div>
            </div>
        }

    </div>
</div>