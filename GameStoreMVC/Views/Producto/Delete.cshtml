@model GameStoreMVC.Models.ProductoModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0 fw-bold">⚠️ ¿ELIMINAR PRODUCTO?</h4>
                </div>
                <div class="card-body text-center">

                    <h5 class="text-danger mb-4">Estás a punto de eliminar este registro permanentemente:</h5>

                    <img src="@Model.ImagenUrl" class="img-thumbnail mb-3" style="height: 150px;">
                    <h3 class="fw-bold">@Model.Nombre</h3>
                    <p class="text-muted">@Model.Descripcion</p>
                    <h4 class="fw-bold text-primary">S/ @Model.Precio</h4>

                    <hr />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="IdProducto" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash-fill"></i> SÍ, ELIMINAR
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                Cancelar y Volver
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>