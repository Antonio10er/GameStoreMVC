@model GameStoreMVC.Models.ProductoModel

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark text-center py-3">
                    <h4 class="mb-0 fw-bold">EDITAR PRODUCTO</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">

                        <input type="hidden" asp-for="IdProducto" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre del Videojuego</label>
                            <input asp-for="Nombre" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Precio (S/)</label>
                                <input asp-for="Precio" type="number" step="0.01" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Stock</label>
                                <input asp-for="Stock" type="number" class="form-control" required />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">URL Imagen</label>
                            <input asp-for="ImagenUrl" class="form-control" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">ID Categoría</label>
                            <input asp-for="IdCategoria" type="number" class="form-control" required />
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-warning px-5">Guardar Cambios</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>